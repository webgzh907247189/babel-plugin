{
    "root": true,
    "env": {
		"browser": true,
		"es2021": true,
        "node": true,
        "jest": true
	},
    "extends": "eslint:recommended",
    "rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	}
}
